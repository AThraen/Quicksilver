@{
    Layout = null;
}

<footer class="footer container-fluid">
    <div class="row">
        <div class="column col-xs-12"><hr /></div>

        <div class="column  col-xs-12  col-md-4  col--leading">
            <img src="~/Styles/Images/dot.gif" alt="Quicksilver logo" class="footer-logo" />
            <h3>@Html.Translate("/Footer/CompanyInformation/Header")</h3>
            <p>@Html.Translate("/Footer/CompanyInformation/Text")</p>
        </div>
        <div class="column  col-xs-12  col-md-4  col--center">
            <h3>@Html.Translate("/Footer/Newsletter/Header")</h3>
            <div class="input-group">
                <input type="text" placeholder="name@example.com" class="form-control  form--grey" />
                <span class="input-group-btn">
                    <button class="btn  btn--grey  link--white" type="button">
                        @Html.Translate("/Footer/Newsletter/Button")
                        <span class="mail-icon"></span>
                    </button>
                </span>
            </div>
        </div>
        <div class="column  col-xs-12  col-md-4  col--trailing">
                <h3>@Html.Translate("/Footer/Social")</h3>
            <a class="btn--social"><i class="fa fa-facebook"></i></a>
            <a class="btn--social"><i class="fa fa-google"></i></a>
            <a class="btn--social"><i class="fa fa-twitter"></i></a>
            <a class="btn--social"><i class="fa fa-instagram"></i></a>
            <a class="btn--social"><i class="fa fa-youtube"></i></a>
            <a class="btn--social"><i class="fa fa-envelope"></i></a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 text-right">
            <img src="~/Styles/Images/under-construction.gif" alt="Under construction" />
        </div>
        <div class="col-md-6 text-left">
            <strong>@Html.Translate("/PreRelease/Heading")</strong>
            <p>
                @Html.Translate("/PreRelease/NotificationMessage")
            </p>
        </div>
    </div></footer>