@using EPiServer.Reference.Commerce.Site.Features.AddressBook.Models
@using EPiServer.Shell.Web
@model AddressBookViewModel
<div class="row myPage">
    @Html.Partial("_CmsNavigation", Model.CurrentPage)
    <div class="col-md-9 jsAddressBook">
        <div class="row">
            <div class="col-md-9">
                <h2> @Html.Translate("/AddressBook/Available")</h2>
            </div>
            <div class="col-md-3">
                @Html.ActionLink(Html.Translate("/AddressBook/Form/Label/NewAddress"), "EditForm", "AddressBook", new { addressId = Guid.Empty }, new { @class = "btn" })
            </div>
        </div>
        <div class="tab-content">
            <div class="tab-pane row active" id="addressBook">
                <table class="table table-striped table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>@Html.Translate("/AddressBook/Form/Label/Name") </th>
                            <th class="hidden-xs">@Html.Translate("/AddressBook/Form/Label/DateModified")</th>
                            <th>@Html.Translate("/AddressBook/Form/Label/Address")</th>
                            <th class="hidden-xs">@Html.Translate("/AddressBook/Form/Label/Defaults")</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var address in Model.Addresses)
                        {
                            <tr>
                                <td>
                                    @Html.Hidden("addressId", address.AddressId)
                                    @address.Name
                                </td>
                                <td class="hidden-xs">
                                    @address.Modified.ToFriendlyDateTimeString()
                                </td>
                                <td>
                                    <address>
                                        @Html.Raw(address.ToString())
                                    </address>
                                </td>
                                <td class="hidden-xs">
                                    @if (address.BillingDefault)
                                    {
                                        <strong>@Html.Translate("/AddressBook/Form/Label/BillingAddress")</strong><br />
                                    }
                                    else
                                    {
                                        using (Html.BeginForm("SetPrimaryBillingAddress", "AddressBook", new { addressId = address.AddressId }, FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-xs">@Html.Translate("/AddressBook/Form/Label/SetBillingAddress")</button>
                                            <br />
                                        }
                                    }
                                    @if (address.ShippingDefault)
                                    {
                                        <strong>@Html.Translate("/AddressBook/Form/Label/ShippingAddress")</strong><br />
                                    }
                                    else
                                    {
                                        using (Html.BeginForm("SetPrimaryShippingAddress", "AddressBook", new { addressId = address.AddressId }, FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-xs">@Html.Translate("/AddressBook/Form/Label/SetShippingAddress")</button>
                                            <br />
                                        }
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "EditForm", "AddressBook", new { addressId = address.AddressId }, new { @class = "btn btn-xs" })
                                    &nbsp;
                                    @using (Html.BeginForm("Remove", "AddressBook", new { addressId = address.AddressId }, FormMethod.Post))
                                    {
                                        <button type="submit" class="btn btn-xs">@Html.Translate("/AddressBook/Form/Label/Delete")</button>
                                        <br />
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>